                  </el-table-column>
                  <el-table-column
                    prop="net_charge_amount"
                    :show-overflow-tooltip="true"
                    width="100"
                    label="应收金额">
                  </el-table-column>
                  <el-table-column
                    prop="charged_amount"
                    :show-overflow-tooltip="true"
                    width="100"
