                  </el-table-column>
                  <el-table-column
                    prop="charge_to"
                    :show-overflow-tooltip="true"
                    width="120"
                    label="费用结束日期">
                  </el-table-column>
                  <el-table-column
                    prop="charge_description"
                    :show-overflow-tooltip="true"
                    width="120"
                    label="摘要">
                  </el-table-column>
                  <el-table-column
                    prop="charge_base"
                    :show-overflow-tooltip="true"
                    width="120"
                    label="费用依据">
                    <template slot-scope="scope" )>
                      <span v-if="scope.row.charge_base == 1"> 租金条款明细</span>
                      <span v-else-if="scope.row.charge_base == 2"> 费用标准条款 </span>
                      <span v-else-if="scope.row.charge_base == 3"> 押金保证金</span>
                      <span v-else-if="scope.row.charge_base == 4"> 收费通知单</span>
                      <span v-else-if="scope.row.charge_base == 5"> 滞纳金通知单</span>
                    </template>
                  </el-table-column>
                  <el-table-column
                    prop="invoiced_amount"
                    :show-overflow-tooltip="true"
                    width="100"
                    label="账单金额">
                  </el-table-column>
                  <el-table-column
                    prop="adjust_amount"
                    :show-overflow-tooltip="true"
                    width="100"
