                  </el-table-column>
                  <el-table-column
                    fixed="right"
                    algin="center"
                    label="操作"
                    width="100">
                    <template slot-scope="scope">
                      <el-button
                        @click.native.prevent="viewCostRow(scope.$index, costViewTable)"
                        type="text"
                        size="small">
                        修改立账日期
                      </el-button>
                    </template>
                  </el-table-column>
                </el-table>
                <el-pagination
                  background
                  layout="prev, pager, next"
                  @current-change="ViewPageinations"
                  :current-page.sync="ViewCurrentPage"
                  :total="ViewTotal">
                </el-pagination>
              </div>
            </div>
          </el-card>
        </el-tab-pane>
        <el-tab-pane label="审批记录">

        </el-tab-pane>
      </el-tabs>
    </el-dialog>
    <!--立账日期-->
    <el-dialog
      title="立账日期"
      :visible.sync="entry.accountsVisible"
      width="70%" height="70%">
      <el-form label-width="80px" :model="editClose" :rules="rentDetailRules" ref="rentDetailRules">
        <el-row :gutter="20">
          <el-col :span="16">
            <el-form-item label="立账日期" class="label_required width_130" prop="accounts_date">
              <el-date-picker
                v-model="editClose.accounts_date"
                type="date"
                placeholder="选择日期">
              </el-date-picker>
            </el-form-item>
          </el-col>
        </el-row>
      </el-form>
      <div slot="footer" class="dialog-footer">
        <el-button type="primary" @click="delaySub('rentDetailRules')">提交审核</el-button>
        <el-button @click="entry.accountsVisible = false">取 消</el-button>
      </div>
    </el-dialog>
    <!--账单退款-->
    <el-dialog :title="costName"  v-if="building" :fullscreen="true" :visible.sync="building" width="100%" height="60%" top="0%"
               :close-on-click-modal="false">
      <costRefund v-on:billAdminIndex="billAdminIndex" :cost="cost" :checkData="checkData" :invoiceHeaderId="invoiceHeaderId"  :costName="costName"></costRefund>
    </el-dialog>
    <el-dialog title="商铺选择" :visible.sync="fieldChoice" width="70%" height="70%" :close-on-click-modal="false">
      <Shops v-on:fieldData="fieldData" :mall="formInline.mall_id"></Shops>
    </el-dialog>
  </el-main>
</template>
<script>
  var data = {}
  import { common } from '@/common/common'
  import costRefund from '@/components/costComponent/costRefund.vue' //
  import Shops from '@/components/order/shops.vue' //商铺

  export default {
    name: 'billAdmin',
    components: {
      costRefund,Shops
    },
    data() {
      return {
        formInline: {},
        tableData: [],
        preData: {},
        total: 0,//分页总数据
        currentPage: 1,//当前页码
        pageSize: 10,//当前页码
        tableHeight: window.innerHeight - 293,//表格高度
        checkData: {}, //选中数据
        pickerOptions: {
          shortcuts: [{
            text: '最近一周',
            onClick(picker) {
              const end = new Date();
              const start = new Date();
              start.setTime(start.getTime());
              end.setTime(end.getTime() - 3600 * 1000 * 24 * 7);
              picker.$emit('pick', [end, start]);
            }
          }, {
            text: '最近一个月',
            onClick(picker) {
              const end = new Date();
              const start = new Date();
              start.setTime(start.getTime());
              end.setTime(end.getTime() - 3600 * 1000 * 24 * 30);
              picker.$emit('pick', [end, start]);
            }
          }, {
            text: '最近一年',
            onClick(picker) {
              const end = new Date();
              const start = new Date();
              start.setTime(start.getTime());
              end.setTime(start.getTime() - 3600 * 1000 * 24 * 365);
              picker.$emit('pick', [end, start]);
            }
          }]
        },
        statusClick: {
          // checkings: true, //审核
          // inCheckings: true, // 提交审核
          cancel: true, // 取消账单
          confirmCancel: true, // 确认账单
          rvokeCancel: true, // 撤销账单
          receivables: true, // 收款
          refund: true, // 账单退款
          openAnAccount: true  // 修改立账日期
        },
        editClose: {
          accounts_date: '' //立账日期
        },
        entry: {
          guaranteeAdd: false,
          accountsVisible: false //立账日期弹出框
        },
        rentDetailRules: {
          'accounts_date': [{ required: true, message: '立账日期不能为空', trigger: 'change' }]
        },
        building: false, // 账单退款
        billing_start_date: [],// 立账日期
        start: [],// 开始日期
        standard_account_peroid_id: [],// 会计期ID
        formShow: false, // 更多搜索
        searchRight: 'el-icon-arrow-down',
        costName: '',//账单退收款title
        viewContent: false,
        costViewName: '',
        invoiceHeaderId: 1,
        //  查看
        costView: {},// 账单查看
        costViewTable: [],
        ViewTotal: 0,//分页总数据
        ViewCurrentPage: 1,//当前页码
        costEditTiemObj: '', // 详细id
        cost: 'cost',
        store_name:'',
        fieldChoice: false,
      }
    },
    computed: {
      act() {
        return this.$store.getters.act
      }
    },
    created: function() {
      this.getData();// 预加载数据
      const searchHistory = common.get('billAdminIndexSearch');
      if (searchHistory != null) {
        this.formInline = searchHistory.search;
        this.pageSize = searchHistory.search.limit;
        common.getPreData(this.formInline, 'InvoiceHeader/getList', this, 'billAdminIndexSearch')
      }
      this.$store.dispatch('getMineBaseApi');
    },
    methods: {
      getData() {//预渲染参数
        let that = this
        this.axios
          .post(process.env.BASE_API + 'table_util/getPreData', { act: 'contract' })
          .then(function(res) {
            if (res.status == 200) {
              that.preData = res.data.data
            }
          })
          .catch(function(err) {
            this.$message.error(err.response.data.msg)
          })
      },
      moreSearch() {
        if (this.searchRight == 'el-icon-arrow-down') {
          this.formShow = true //更多搜索
          this.searchRight = 'el-icon-arrow-up'
          this.tableHeight = window.innerHeight - 522
        } else {
          this.formShow = false //更多搜索
          this.searchRight = 'el-icon-arrow-down'
          this.tableHeight = window.innerHeight - 293
        }
      },
      costListTable() {
        data = this.formInline;
        common.getPreData(data, 'InvoiceHeader/getList', this, 'billAdminIndexSearch');
        common.set('billAdminIndexSearch', { 'search': {mall_id:this.formInline.mall_id}  });
        this.statusClick.cancel = true; // 取消账单
        this.statusClick.confirmCancel = true; // 确认账单
        this.statusClick.rvokeCancel = true; // 撤销取消
        this.statusClick.receivables = true; // 收款
        this.statusClick.refund = true; // 账单退款
        this.statusClick.openAnAccount = true; // 修改立账日期
      },
      onSecher() {
        this.costListTable();
      },
      fieldClick() {
        //场地点击
        if (this.formInline.mall_id == undefined) {
          this.$message({
            message: '请选择门店',
            type: 'warning'
          })
        } else {
          if(this.formInline.store_id == '' || this.formInline.store_id == undefined && this.store_name == '') {
            this.fieldChoice = true;
          }else {
            this.formInline.store_id = '';
            this.store_name = '';
            this.$nextTick(() => {
              this.$refs.getPayWayChang.blur();
            })
          }
        }
      },
      fieldData(data) {//场地赋值
        if (data.length == undefined) {
          this.store_name = data.store_name
          this.formInline.store_id = data.store_id
        } else {
          let store_id = '', store_name = ''
          data.forEach((index, i) => {
            if (i != data.length - 1) {
              store_id += index.store_id + ','
              store_name += index.store_name + ','
            } else {
              store_id += index.store_id
              store_name += index.store_name
            }
            this.store_name = store_name
            this.formInline.store_id = store_id
          })
        }
        this.fieldChoice = false
      },
      billingTime(e, index) {// 立账起始日期
        switch (index) {
          case 1:
            e ? this.formInline.billing_start_date = e[0] : this.formInline.billing_end_date = '';
            e ? this.formInline.billing_end_date = e[1] : this.formInline.billing_end_date = '';
            break;
          case 2:
            e ? this.formInline.start = e[0] : this.ruleForm.start = '';
            e ? this.formInline.end = e[1] : this.ruleForm.end = '';
            break;
          case 3:
            e ? this.formInline.standard_account_peroid_id = e.replace("-",".") : this.ruleForm.standard_account_peroid_id = '';
            break;
        }
      },

      // 会计期
      standardTime(val) {
        if (val == null) {
          this.formInline.standard_account_peroid_id = '';
        } else {
          this.formInline.standard_account_peroid_id = val.replace("-",".");
        }
      },
      clickRow(row) {//选择当前行
        this.$refs.multipleTable.toggleRowSelection(row);
        this.checkData = row;
        this.invoiceHeaderId = this.checkData.invoice_header_id;
        if(row.enabled != 0) {
          if(parseFloat(row.invoice_status) == 1) {// 判断是否已已同步
            if(row.cancel_flag == 0) { // 判断是否取消过
              this.statusClick.cancel = false;
              this.statusClick.rvokeCancel = true;
              this.statusClick.confirmCancel = true;
              this.statusClick.openAnAccount = false;
            }else if(row.cancel_flag == 1){
              this.statusClick.cancel = true; // 取消账单
              this.statusClick.rvokeCancel = false; // 撤销取消中
              this.statusClick.confirmCancel = false; // 确认取消
              this.statusClick.openAnAccount = true; // 修改立账日期
            }else {
              this.statusClick.cancel = true;
              this.statusClick.rvokeCancel = true;
              this.statusClick.confirmCancel = true;
              this.statusClick.openAnAccount = true;
            }
          }else {
            this.statusClick.cancel = true;
            this.statusClick.rvokeCancel = true;
            this.statusClick.confirmCancel = true;
            this.statusClick.openAnAccount = true;
          }
          if(row.no_pay_money > 0) { //收款 退款 按钮显示隐藏条件判断
            this.statusClick.receivables = false;
            this.statusClick.refund = true;
          }else if(row.no_pay_money == 0) {
            this.statusClick.receivables = true;
            this.statusClick.refund = true;
          }else {
            this.statusClick.receivables = true; // 收款
            this.statusClick.refund = false; // 账单退款
          }
        }else {
          this.statusClick.cancel = true;
          this.statusClick.rvokeCancel = true;
          this.statusClick.confirmCancel = true;
          this.statusClick.openAnAccount = true;
          this.statusClick.receivables = true;
          this.statusClick.refund = true;
        }
      },
      changFun(row) {//获取当前行数据
        if (row.length > 1) { //去除多选
          this.$refs.multipleTable.clearSelection();
          this.$refs.multipleTable.toggleRowSelection(row.pop());
        }
      },
      viewRow(row) {
        this.viewContent = true;
        let data = {};
        data.invoice_header_id = row.invoice_header_id;
        this.costViews(data);
      },
      // deleteRow(index, row) {//作废
      //   common.del('此操作将作废合同是否继续?', 'contract_main/editStatus', {
      //     contract_main_id: row[index].contract_main_id,
      //     status: 0
      //   }, 'CutOff/getCutList', this, 'supensionSearch')
      // },
      pagination(val) {// 列表分页
        data = this.formInline;
        data.page = val;
        common.getPreData(data, 'InvoiceHeader/getList', this, 'billAdminIndexSearch');
        common.set('billAdminIndexSearch', { 'search': {mall_id:this.formInline.mall_id,page: val} });
      },
      handleSizeChange(val) {// 列表分页
        data = this.formInline;
        data.limit = val;
        common.getPreData(data, 'InvoiceHeader/getList', this, 'billAdminIndexSearch');
        common.set('billAdminIndexSearch', { 'search': {mall_id:this.formInline.mall_id,limit: val} });
      },
      cancel() { //取消账单
        this.cancleTitle(1);
      },
      confirmCancel() { //确认取消
        this.cancleTitle(2);
      },
      rvokeCancel() { //撤销取消
        this.cancleTitle(0);
      },
      cancleTitle(val) {
        this.$prompt('取消原因', '提示', {
          confirmButtonText: '确定',
          cancelButtonText: '取消',
          inputValidator: function(v) {
            let returns = false;
            if (v == null || v == '') {
              returns = false;
            } else {
              returns = true;
            }
            return returns
          },
          inputErrorMessage: '请输入内容'
        }).then(({ value }) => {
            const data = {
              invoice_header_id: this.invoiceHeaderId,
              cancel_flag: val,
              note: value
            };
            this.cancelPost(data);
        }).catch(() => {
          this.$message({
            type: 'info',
            message: '取消输入'
          });
        });
      },
      cancelPost(data) {
        let that = this;
        that.axios
          .post(process.env.BASE_API + 'Bill/cancelBill', data)
          .then(function(res) {
            if (res.data.error_code == 0) {
              that.$message.success('取消账单成功');
              that.costListTable();
            }else {
              that.$message.error(res.data.msg);
            }
          })
          .catch(function(err) {
            that.$message.error(err.response.data.msg)
          })
      },
      receivables() { //收款
        this.costName = '账单收款';
        this.building = true;
      },
      refund() { //账单退款
        this.costName = '账单退款';
        this.building = true;
      },
      openAnAccount() { //修改立账日期
        this.entry.accountsVisible = true;
        this.costViewName = 'List';
      },
      guaranteeClick() { //编辑合同中止日期
        let that = this;
        common.del('是否修改中止日期?', 'CutOff/editCut', {
          id: that.checkData.id,
          enabled: that.checkData.enabled,
          cut_date: that.checkData.cut_date
        }, 'CutOff/getCutList', this, 'supensionSearch');
        that.entry.guaranteeAdd = false;
      },
      delaySub(formName) { //立账日期保存
        let that = this;
        this.$refs[formName].validate((valid) => {
          let bill = {};
          if (that.costViewName == 'List') {//列表修改立账日期
            bill = {
              bill_date: common.dateFormat(that.editClose.accounts_date),
              invoice_header_id: that.checkData.invoice_header_id
            };
          } else {//详细修改立账日期
            bill = {
              bill_date: common.dateFormat(that.editClose.accounts_date),
              invoice_detail_id: that.costEditTiemObj
            };
          }
          if (valid) {
            that.axios
              .post(process.env.BASE_API + 'InvoiceDetail/editAccountBill', bill)
              .then(function(res) {
                if (res.data.errorCode == 0) {
                  that.$message({
                    message: '提交成功',
                    type: 'success'
                  });
                  if (that.costViewName == 'List') { //列表修改立账日期
                    that.costListTable();
                  } else { //详细修改立账日期
                    let data = {};
                    data.invoice_header_id = that.checkData.invoice_header_id;
                    that.costViews(data);
                  }
                  that.entry.accountsVisible = false;
                } else {
                  that.$message.error(res.data.msg);
                }
              })
              .catch(function(err) {
                that.$message.error(err.response.data.msg);
              })
          } else {
            this.$message({
              message: '您有信息尚未填写完',
              type: 'warning'
            });
            return false;
          }
        })
      },
      //详细分页
      ViewPageinations(val) {// 详细分页
        let data = {};
        data.page = val;
        data.limit = 10;
        data.invoice_header_id = this.checkData.invoice_header_id;
        this.costViews(data);
      },
      costViews(data) { // 查看详细
        let that = this;
        that.axios
          .post(process.env.BASE_API + 'Bill/getBillDetail', data)
          .then(function(res) {
            if (res.data.error_code === 0) {
              that.costView = res.data.data.main;
              that.costViewTable = res.data.data.list;// 订单信息
            }
          })
          .catch(function(err) {
            that.$message.error(err.responseJSON.msg);
          })
      },
      viewCostRow(index, row) { // 详细打开修改立账日
        this.entry.accountsVisible = true;
        this.costViewName = 'detail';
        this.costEditTiemObj = row[index].invoice_detail_id;
      },
      // 收款-退货后
      billAdminIndex(data) {
        if(data == 0) {
          setTimeout(() => {
            this.building = false;
            common.getPreData(this.formInline, 'InvoiceHeader/getList', this, 'billAdminIndexSearch');
          }, 500);
        }else {
          this.viewRow(data)
        }
      },
    }
  }
</script>
<style scoped>

  .el-form-item {
    margin-bottom: 5px;
  }
</style>
