                    <template slot-scope="scope" )>
                      <span v-if="scope.row.charge_status == 0"> 未收款</span>
                      <span v-else-if="scope.row.charge_status == 1"> 部分收款 </span>
                      <span v-else-if="scope.row.charge_status == 2"> 全部收款</span>
                    </template>
                  </el-table-column>
                  <el-table-column
                    prop="month_name"
