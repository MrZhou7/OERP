    <!--立账日期弹框-->
    <el-dialog
      :visible.sync="dialogVisibleTime"
      :close-on-click-modal="false"
      title="修改立账日期"
      top="5%"
      width="50%"
      height="50%">
      <el-form ref="form" :rules="rules" :model="form" label-width="100px">
        <el-form-item label="原立账日期">
          <el-date-picker
            :readonly="true"
            v-model="form.value1"
            value-format="yyyy-MM-dd"
            type="date">
          </el-date-picker>
        </el-form-item>
        <el-form-item label="新立账日期" prop="value2">
          <el-date-picker
