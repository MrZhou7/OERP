</template>

<script>
  import {common} from '@/common/common'

  export default {
    name: "checkBrand",
    props:['tableBrandMess'],
    data() {
      return {
        activeName: 'first',
        brandRank:[],//品牌等级基础数据
        brandState:[],//品牌狀態基礎數據
        checkTableData:{}//接受点击传过来的品牌信息
      };
    },
    methods: {
      handleClick(tab, event) {
        //console.log(tab, event);
      },
      //获取当前品牌信息
      getCheckBrand() {
        let BrandId = {brand_id:this.$route.query.checkBrandId};
        this.axios({
          method:'post',
          data:BrandId,
          url:process.env.BASE_API + 'brand_info/getBrandInfo'
        }).then((res)=>{
          if (res.status == 200) {
            this.checkTableData = res.data.data;
            console.log(this.checkTableData)
          }
        }).catch(function(err) {
          this.$message.error(err.response.data.msg)
        })
        common.lookup('L016', this).then((res) => {
          this.brandRank = res
        })
        common.lookup('L017', this).then((res) => {
          this.brandState = res
          console.log(this.brandState)
        })
      },
      //返回上一页
      back(){
        this.$router.go(-1)
      }
    },
    created() {
      this.getCheckBrand();
    }
  }
</script>

