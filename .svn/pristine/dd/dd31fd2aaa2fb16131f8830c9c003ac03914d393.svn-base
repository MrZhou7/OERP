.el-tabs{ margin: 10px; }
  .wrap a{
    padding: 8px 10px;
    display: inline-block;
    line-height: 1;
    white-space: nowrap;
    cursor: pointer;
    background: #fff;
    border: 1px solid #dcdfe6;
    color: #606266;
    text-align: center;
    box-sizing: border-box;
    font-size: 12px;
    border-radius: 3px;
    outline: 0;}
