        common.del('是否提交审核?', 'CutOff/cutOffAudit', {
          id: this.checkData.id,
          status: 3
        }, 'CutOff/getCutList', this, 'supensionSearch');
      },
      receivables() { //收款
        this.costName = '账单收款';
        this.building = true;
      },
      refund() { //账单退款
        this.costName = '账单退款';
        this.building = true;
      },
      openAnAccount() { //修改立账日期
       this.entry.accountsVisible = true;
      },
      guaranteeClick() { //编辑合同中止日期
        let that = this
        common.del('是否修改中止日期?', 'CutOff/editCut', {
          id: that.checkData.id,
          enabled: that.checkData.enabled,
          cut_date: that.checkData.cut_date
        }, 'CutOff/getCutList', this, 'supensionSearch')
        that.entry.guaranteeAdd = false
      },
      delaySub(formName) { //立账日期保存
        let that = this
        let closeType = {}
        this.$refs[formName].validate((valid) => {
          let bill = {};

          if(that.costEditTiemObj == '') {
            bill = {
              bill_date:common.dateFormat(that.editClose.accounts_date),
              invoice_header_id: that.checkData.invoice_header_id,
            }
          }else {
            bill = {
              bill_date:common.dateFormat(that.editClose.accounts_date),
              invoice_detail_id:that.costEditTiemObj,
            }
          }
          console.log(that.costEditTiemObj)
          console.log(bill)

          if (valid) {
            that.axios
              .post('http://10.1.2.168/index.php/v1/InvoiceDetail/editAccountBill', bill)
              .then(function(res) {
                if (res.data.errorCode == 0) {
                  that.$message({
                    message: '提交成功',
                    type: 'success'
                  });
                  that.detailId = 1;
                  that.entry.accountsVisible = false;
                  that.detailId = '';
                  // common.getPreData(that.formInline, 'contract_main/getConMainList', that, 'billAdminIndexSearch');
                } else {
                  that.$message.error(res.data.msg)
                }
              })
              .catch(function(err) {
                that.$message.error(err.response.data.msg)
              })
            // that.axios
            //   .post(process.env.BASE_API + 'InvoiceDetail/editAccountBill', bill)
            //   .then(function(res) {
            //     if (res.data.errorCode == 0) {
            //       that.$message({
            //         message: '提交成功',
            //         type: 'success'
            //       })
            //       that.entry.accountsVisible = false;
            //       common.getPreData(that.formInline, 'contract_main/getConMainList', that, 'billAdminIndexSearch');
            //     } else {
            //       that.$message.error(res.data.msg)
            //     }
            //   })
            //   .catch(function(err) {
            //     that.$message.error(err.response.data.msg)
            //   })
          } else {
            this.$message({
              message: '您有信息尚未填写完',
              type: 'warning'
            })
            return false
          }
        })
      },
      costEditTiem(data) {//品牌赋值
        console.log(data)
        this.costEditTiemObj = data;
        this.openAnAccount();
      },
    }
  }
