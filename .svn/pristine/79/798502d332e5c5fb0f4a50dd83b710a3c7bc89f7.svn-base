            <el-col :span="8">
              <el-form-item label="工号">
                <el-input v-model="ruleForm.staff_num" placeholder="请输入工号"></el-input>
              </el-form-item>
            </el-col>
            <el-col :span="8">
              <el-form-item label="姓名">
                <el-input v-model="ruleForm.staff_name" placeholder="请输入姓名"></el-input>
              </el-form-item>
