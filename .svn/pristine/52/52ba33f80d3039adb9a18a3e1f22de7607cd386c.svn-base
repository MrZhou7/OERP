            }
          })
          .catch(function(err) {
            this.$message.error(err.response.data.msg)
          })
        this.axios
          .post(process.env.BASE_API + 'charge_type/getTypeList', { module: 'all' })
          .then(function(res) {

            if (res.data.errorCode == 0) {
              that.getTypeList = res.data.data;
            }
          })
