<script>
  import addShop from '@/components/sale/shops/addShop.vue' //商铺
  import { common } from '@/common/common';
  import building from '@/utils/building';
  export default {
    name: 'shopsManagement',
    components: { addShop },
    data() {
      return {
        mall_name: [], // 门店信息
        building_name: [], // 楼栋
        floor_name: [], // 楼层
        formInline: {}, // 楼层
        total: 0, // 分页
        currentPage: 1, // 页码
        pageSize: 10,//当前页码
        tableHeight: window.innerHeight - 342,
        tableData: [], // 查询获取的数据
        store_name: '',
        checkData:[],
        addShopDialog:false,
        addShopId: '',
        addShopType: '',
      };
    },
    created() {
      building.Mall(this); // 先获取门店数据
    },
    methods: {
      getBuild() { // 获取楼栋信息
        if(!this.formInline.mall_id) {
          this.$message({
            message: '请选择门店',
            type: 'warning'
          })
        }else {
          building.build(this, this.formInline.mall_id);
        }
      },
      getFloor() { // 获取楼层信息
        if(!this.formInline.building_id) {
          this.$message({
            message: '请选择楼栋',
            type: 'warning'
          })
        }else {
          building.floor(this, this.formInline.building_id);
        }
      },
      pagination(val) { // 分页
        const data = this.formInline;
        data.page = val;
        common.getPreData(data, 'customer/getCustomerList', this, 'shopsManagement');
        common.set('shopsManagement', { 'search': data });
      },
      handleSizeChange(val) {
        const data = this.formInline;
        data.limit = val;
        common.getPreData(data, 'customer/getCustomerList', this, 'shopsManagement');
        common.set('shopsManagement', { 'search': data });
      },



      clickRow(row) { // 点击table的row
        this.$refs.tableOne.toggleRowSelection(row);
        this.checkData = row
      },
      changFun(row) {//获取当前行数据
        common.radioBtn(row, this.$refs.multipleTable, this, 2)
      },
      addShop: function() { // 新增商户
        this.addShopDialog = true;
        this.addShopId = '';
        this.name = '新增商铺';
        this.addShoptype = 1;
      },
      viewRow(row) {
        this.addShopDialog = true;
        this.addShopId = row.id;
        this.addShoptype = 2;
        this.name = '查看商铺';
      },
      editRow(row) {
        this.addShopDialog = true;
        this.addShopId = row.id;
        this.addShoptype = 3;
        this.name = '编辑商铺';
      },
      synchronization(row) {},
      addShopData(data) {},
    }
  };
</script>

